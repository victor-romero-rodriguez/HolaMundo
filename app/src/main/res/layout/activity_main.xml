<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad Sin Resultado"
        android:id="@+id/button"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/btConResultado"
        android:layout_alignStart="@+id/btConResultado"
        android:layout_alignRight="@+id/btConResultado"
        android:layout_alignEnd="@+id/btConResultado" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad Con Resultado"
        android:id="@+id/btConResultado"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginTop="77dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Implicita"
        android:id="@+id/bImplicita"
        android:layout_below="@+id/btConResultado"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/btConResultado"
        android:layout_alignEnd="@+id/btConResultado" />

</RelativeLayout>
